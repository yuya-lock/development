<div class="title-bg mb-5 text-center">
  <% @page_title = "プロフィール編集" %>
  <%= @page_title %>
</div>

<div class="toolbar"><%= link_to "My Ptofileに戻る", :account %></div>

<div class="card text-dark w-75 mx-auto mb-5">
  <div class="card-header bg-gray text-black">
    プロフィールを編集する
  </div>
  <div class="card-body">
    <%= form_for @user, as: "account", url: :account, local: true do |form| %>
      <div class="container p-2">
        <div class="form-group row pb-3"> 
        <%= form.label :name, class: "col-md-2 col-form-label" %>
        <div class="col-md-10">
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <%= render "shared/errors", model: @user, attribute: :name %>
      </div>
      <div class="form-group row py-3">
        <%= form.label :mail, class: "col-md-2 col-form-label" %>
        <div class="col-md-10">
          <%= form.text_field :mail, class: 'form-control' %>
        </div>
        <%= render "shared/errors", model: @user, attribute: :mail %>
      </div>
      <div class="form-group row justify-content-end py-3">
        <div class="col-md-10">
          <%= form.submit "変更", class: "btn btn-outline-primary" %>
        </div>
    <% end %>
  </div>
</div>