<div class="title-bg mb-5 text-center">
  <%= @page_title = "プロフィール編集" %>
  <%= @page_title %>
</div>

<div class="card text-dark w-75 mx-auto mb-5">
  <div class="card-header bg-gray text-black">
    プロフィールを編集する
  </div>
  <div class="card-body">
    <% form_for @user do |form| %>
      <%= render "form", form: form %>
      <div class="form-group row justify-content-end py-3">
        <div class="col-md-10">
          <%= form.submit "完了", class: "btn btn-outline-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>