<% @page_title = "パスワードの変更" %>
<h1><%= @page_title %></h1>

<div class="toolbar"><%= link_to "My Ptofileに戻る", :account %></div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">  
    <%= form_for @user, as: "account", url: :password, local: true do |form| %>

    <%= form.label :current_password %>
    <%= form.password_field :current_password, class: 'form-control' %>
    <%= render "shared/errors", model: @user, attribute: :current_password %>

    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control' %>
    <%= render "shared/errors", model: @user, attribute: :password %>

    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: 'form-control' %>
    <%= render "shared/errors", model: @user, attribute: :password_confirmation %>

    <%= form.submit "変更", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>