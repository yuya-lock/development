<div class="title-bg mb-5 text-center">
  <% @page_title = "パスワード変更" %>
  <%= @page_title %>
</div>

<div class="toolbar"><%= link_to "My Ptofileに戻る", :account %></div>

<div class="card text-dark w-75 mx-auto mb-5">
  <div class="card-header bg-gray text-black">
    パスワードを変更する
  </div>
  <div class="card-body">  
    <%= form_for @user, as: "account", url: :password, local: true do |form| %>
      <div class="container p-2">
        <div class="form-group row pb-3"> 
          <%= form.label :current_password, class: "col-md-2 col-form-label" %>
          <div class="col-md-10">
            <%= form.password_field :current_password, class: 'form-control' %>
          </div>
          <%= render "shared/errors", model: @user, attribute: :current_password %>
        </div>
        <div class="form-group row py-3">
          <%= form.label :password, class: "col-md-2 col-form-label" %>
          <div class="col-md-10">
            <%= form.password_field :password, class: 'form-control' %>
          </div>
          <%= render "shared/errors", model: @user, attribute: :password %>
        </div>
        <div class="form-group row py-3">
          <%= form.label :password_confirmation, class: "col-md-2 col-form-label" %>
          <div class="col-md-10">
            <%= form.password_field :password_confirmation, class: 'form-control' %>
          </div>
          <%= render "shared/errors", model: @user, attribute: :password_confirmation %>
        </div>
        <div class="form-group row justify-content-end py-3">
          <div class="col-md-10">
            <%= form.submit "変更", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>