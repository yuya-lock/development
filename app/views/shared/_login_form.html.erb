<div class="title-bg mb-5 text-center">
  <% @page_title = "ログイン" %>
  <%= @page_title %>
</div>

<div class="card text-dark w-75 mx-auto mb-5">
  <div class="card-header bg-gray text-black">
    ログインする
  </div>
  <div class="card-body">
    <%= form_with(url: login_path, scope: :session, local: true) do |form| %>
      <div class="container p-2">
        <div class="form-group row pb-3">
          <%= form.label :mail, "メールアドレス", class: "col-md-2 col-form-label" %>
          <div class="col-md-10">
            <%= form.text_field :mail, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row py-3">
          <%= form.label :password, "パスワード", class: "col-md-2 col-form-label" %>
          <div class="col-md-10">
            <%= form.password_field :password, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row justify-content-end">
          <div class="col-md-10">
            <%= form.label :remember_me, class: "checkbox inline" do %>
              <%= form.check_box :remember_me %>
              <span>次回からログインを省略する</span>
            <% end %>
          </div>
        </div>
        <div class="form-group row justify-content-end py-3">
          <div class="col-md-10">
            <%= form.submit "ログイン", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>